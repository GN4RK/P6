{% extends 'base.html.twig' %}

{% block title %}
    SnowTricks - Sign in
{% endblock %}

{% block body %}
    <h1 class="text-center">Login</h1>

    <div class="container border rounded mt-4 p-4" style="max-width: 600px;">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}


        <form action="{{ path('sign_in') }}" method="post">
            <div class="form-group mt-3 text-center">
                <label for="username">Username</label>
                <input type="text" class="form-control mb-3" id="username" name="_username" value="{{ last_username }}"/>

                <label for="password">Password</label>
                <input type="password" class="form-control mb-3" id="password" name="_password"/>

                <div class="my-4">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>

                <div class="my-4 d-sm-none d-inline">
                    <a href="{{ path('sign_up') }}">Register</a>
                </div>

                <div class="my-4">
                    <a href="{{ path('forgot_password') }}">Forgot Password ?</a>
                </div>

                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/account"/> #}

                
            </div>
        </form>

    </div>
{% endblock %}