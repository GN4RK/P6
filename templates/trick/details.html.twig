{% extends 'base.html.twig' %}

{% block title %}
    SnowTricks - Accueil
{% endblock %}

{% block body %}
    <div class="card mb-3">
        <img class="card-img" src="{{ asset('img/mountain.jpg') }}" alt="Card image">
        <div class="card-img-overlay d-flex align-items-center">
            <h1 class="mx-auto" style="color: white;text-shadow: 2px 2px 2px black;">
                {{ trick.name|capitalize }}
            </h1>
        </div>
    </div>

    <div class="d-none d-sm-block mb-3">
        <div class="d-flex flex-wrap">
            {% for media in trick.media %}
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        {{ media.content|raw}}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="d-block d-sm-none mx-auto mb-3" style="width: 120px;">
        <button type="button" class="btn btn-primary">See medias</button>
    </div>

    <div>
        <p>
            {{ trick.description }}
        </p>
    </div>
    <div class="text-center">
        Added on {{ trick.date|date("m/d/Y") }} || 
        Category : {{ trick.category }}
        {% if trick.lastUpdate is not null %}
            || last update on {{ trick.lastUpdate|date("m/d/Y") }}
        {% endif %}
    </div>

    <hr class="my-4">

    {% if user is defined %}
        {{ form(commentForm) }}
        <hr class="my-4">
    {% endif %}

    {% if trick.comments|length < 1 %}
        No comment
    {% else %}
        {% for comment in trick.comments %}
            <div class="row my-4">
                <div class="col-md-2 col-3">
                    {{ comment.user.photo }}
                    {{ comment.user.username }}
                </div>
                <div class="col-md-10 col-9">
                    {{ comment.content }}
                </div>
            </div>
        {% endfor %}
    {% endif %}








{% endblock %}